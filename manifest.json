{
    "manifest_version": 2,

    "name": "Hide Downloads Bar Shortcut",
    "description": "Assign shortcut (defaults to Cmd+W) to hide downloads bar",
    "version": "1.0",

    "commands": {
        "hide-downloads-bar": {
            "suggested_key": {
                "default": "Ctrl+J"
            },
            "description": "Hide Downloads Bar"
        }
    },

    "icons": {
        "128": "128.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": [
        "downloads",
        "downloads.shelf"
    ]

}
